<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp" app:srcCompat="@android:drawable/sym_def_app_icon"
            android:id="@+id/image_view" android:layout_centerHorizontal="true"/>
    <Button
            android:text="Fade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/fade_btn" android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" android:textSize="24sp" android:background="#00BCD4"/>
    <Button
            android:text="Scale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/scale_btn" android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" android:layout_marginBottom="50dp" android:textSize="24sp"
            android:background="#9C27B0"/>
</RelativeLayout>